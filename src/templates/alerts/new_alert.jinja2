<!-- linking to base.jinja2 -->
{% extends "base.jinja2" %}

{% block content %}
    <div class="page-header">
        <h1>Create Alert</h1>
    </div>
    <div class="form-size">
        {# the default action is to stay in the current webpage #}
        {# but with submission type of POST #}
        <form method="post">
            <div class="form-group">
                <label for="name">Alert/Item Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <label for="url">URL</label>
                <input type="text" class="form-control" id="url" name="url" placeholder="http://...">
            </div>
             <div class="form-group">
                <label for="price_limit">Alert Limit</label>
                <input type="text" class="form-control" id="price_limit" name="price_limit" placeholder="150.0" aria-describedby="PriceLimitBlock">
                <p id="PriceLimitBlock" class="help-block">We'll send you an e-mail when the price reaches or goes under this.</p>
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
{% endblock %}
